{% if ENVIRONEMENT == 'development' %}
    <link type="text/css" href="/assets/css/bootstrap.css?ver={{ ES_FILE_VERSION }}" rel="stylesheet" />
{% else %}
    <link type="text/css" href="/assets/css/min-easyshop.bug-report.css?ver={{ ES_FILE_VERSION }}" rel="stylesheet" />
{% endif %}


<section id="bug-report">
    <div class="mrgn-top-35"></div>
    <div class="container">
        <div class="border-all border-rad-3">
            <div class="col-md-12 border-bottom bg-cl-f7f7f7">
                <div class="pd-tb-15">
                        <h5><strong>Your Feedback About Easyshop.ph</strong></h5>
                </div>
            </div>
            <div class="clear"></div>

            <input type="hidden" id="validFlag" val="{{ isValid|escape('js') }}"/>

            <div class="alert alert-success" id="success-alert" style="display:none;">
                <strong>Success!</strong> Your report has been sent successfully.
            </div>

            <div class="form-horizontal feedback-container">
                <p class="col-md-12 mrgn-bttm-15">Let us know how we can improve your experience with Easyshop.ph</p>

                {{ form_start(form) }}
                    {{ form_errors(form) }}
                <div class="col-xs-12 col-sm-6 col-md-6 pd-tb-15 border-right mrgn-bttm-15">
                        <div class="row mrgn-bttm-15">
                            <label class="col-xs-12 col-sm-3 col-md-3">Title:</label>
                            <div class="col-xs-12 col-sm-9 col-md-9">
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                                <div class="error red">
                                    {{ form_errors(form.title) }}
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="row mrgn-bttm-15">
                            <label class="col-xs-12 col-sm-3 col-md-3">Description:</label>
                            <div class="col-xs-12 col-sm-9 col-md-9">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control feedback-textarea'}}) }}
                                <div class="error red">
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="row">
                            <label class="col-xs-12 col-sm-3 col-md-3">Confirm:</label>
                            <div class="col-xs-12 col-sm-9 col-md-9">
                                <div class="col-xs-6" >
                                    {{ form_widget(form.captcha, {'attr': {'class': 'form-control feedback-captcha', 'maxlength' : '5'} }) }}
                                    <div class="error red">
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                                
                                <div class="col-xs-6" >
                                    <img src="{{ captchaImage }}"/>
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                        <h5><strong>Upload Photo Here</strong></h5>
                        <p class="f11 mrgn-bttm-25">
                            Found a bug? Oops, our bad. Let us know so we can take care of it. Upload a photo to help
                            us find the problem faster and make the necessary changes sooner.
                        
                    </p>
                    <div class="row feedback-upload-photo-wrapper">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                                <label>
                                    <div class="feedback-img-wrapper display-ib">
                                            <span class="feedback-img-con">
                                                <img src="{{ assetsDomain }}assets/images/img_upload_photo.jpg">
                                            </span>
                                    </div>
                                    {{ form_widget(form.file, {'attr': {'class': ''}}) }}
                                    <div class="error red">
                                            {{ form_errors(form.file) }}
                                    </div>
                                </label>

                            </div>
                            <div class="clear"></div>
                        </div>
                </div>
                <div class="clear"></div>
                <div class="mrgn-bttm-15 mrgn-top-10">
                        <div class="col-xs-12 col-sm-12 col-md-12 text-center send-btn-con">
                            {{ form_row(form.submit, {'attr': {'class': 'btn btn-default-4 width-30p'}}) }}
                        </div>
                        <div class="clear"></div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div class="mrgn-bttm-45"></div>
</section>

{% if ENVRONMENT == 'development' %}
    <script type="text/javascript" src="/assets/js/src/bug-report.js?ver={{ ES_FILE_VERSION }}"></script>
{% else %}
    <script src="/assets/js/min/easyshop.bug_report.js?ver={{ ES_FILE_VERSION }}" type="text/javascript"></script>
{% endif %}

